<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient_rounded"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="60dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingBottom="170dp"
    tools:ignore="MissingConstraints"
    android:layout_marginTop="-25dp"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Fin del juego!"
        android:textColor="#fff"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:fontFamily="@font/poppins_light"

        >

        <TextView
            android:id="@+id/correct_Strings_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Correctas"
            android:textColor="#fff"
            android:textSize="40sp"
        />
        <TextView
            android:id="@+id/number_of_correct_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00FF00"
            android:gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="40sp"
            tools:text="10"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/skipped_strings_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Incorrectas"
            android:textColor="#fff"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/number_of_skipped_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:textColor="#FF0000"
            android:textSize="40sp"
             android:text=""/>
    </LinearLayout>

    <Button
        android:id="@+id/activity_result_go_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver a jugar"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_gradient"/>
</LinearLayout><!--<ImageView--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:src="@drawable/divider"/>--><!--<ListView--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:id="@+id/strings_list_view">--><!--<TextView--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:padding="5dp"--><!--android:id="@+id/string"--><!--android:textColor="#fff"/>--><!--</ListView>-->